{
  "name": "my-razzle-app",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "start": "razzle start",
    "build": "razzle build",
    "pretest": "npm run lint",
    "test": "razzle test --env=jsdom",
    "posttest": "npm run format",
    "start:prod": "NODE_ENV=production node build/server.js",
    "format": "prettier --write '**/*.{js,css,md}'",
    "lint": "eslint . --cache --fix",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "@jaredpalmer/after": "^1.3.0",
    "express": "^4.16.2",
    "raf": "^3.4.0",
    "razzle": "^0.8.11",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-helmet": "^5.2.0",
    "react-router-dom": "^4.2.2",
    "styled-components": "^3.2.3"
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "lint-staged": "^7.0.0",
		"prettier": "^1.11.1"
  },
  "lint-staged": {
    "*.{js,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
